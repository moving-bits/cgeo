<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Individual routes -->

    <Button
        android:id="@+id/indivroute_load"
        android:text="Load individual route"
        style="@style/button_full" />

    <include layout="@layout/routes_tracks_item" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <TextView
            android:id="@+id/indivroute_export"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/indivroute_export_route"
            android:text="Export individual route"
            style="@style/text_default"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/indivroute_export_route"
            android:text="Route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/indivroute_export_track"
            style="@style/button"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/indivroute_export_track"
            android:text="Track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/button"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <CheckBox
        android:id="@+id/auto_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/map_autotarget_individual_route"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"/>

    <!-- GPX routes/tracks -->

    <Button
        android:id="@+id/trackroute_load"
        android:text="Load track / route"
        style="@style/button_full" />

    <FrameLayout
        android:id="@+id/tracklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!-- next two lines as mockup -->
    <include android:id="@+id/track1" layout="@layout/routes_tracks_item" />
    <include android:id="@+id/track2" layout="@layout/routes_tracks_item" />

    <!-- Common -->

    <Button
        android:id="@+id/clear_targets"
        android:text="Clear manual targets"
        style="@style/button_full" />

</LinearLayout>
